// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "buffer_font_family": "FantasqueSansM Nerd Font Mono",
  "buffer_font_size": 16,
  "collaboration_panel": {
    "button": false
  },
  "ensure_final_newline_on_save": true,
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": null,
    "inline_blame": null,
    "hunk_style": null
  },
  "git_panel": {
    "dock": "left",
    "default_width": 360
  },
  "file_types": {
    "JSONC": [".config/zed/**/*.json"],
    "Shell Script": [".env*"]
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "default_width": 360
  },
  "soft_wrap": "editor_width",
  "tabs": {
    "activate_on_close": "history",
    "close_position": "left",
    "file_icons": true,
    "git_status": true,
    "show_close_button": "always"
  },
  "tab_size": 2,
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "terminal": {
    "dock": "right",
    "font_size": 16,
    "font_family": "FantasqueSansM Nerd Font Mono",
    "blinking": "on",
    "shell": null,
    "font_features": {
      "aalt": true,
      "calt": true,
      "ccmp": true,
      "liga": true,
      "ss08": true,
      "ss09": true
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Nord"
  },
  "ui_font_family": "FantasqueSansM Nerd Font Mono",
  "ui_font_size": 16
}
